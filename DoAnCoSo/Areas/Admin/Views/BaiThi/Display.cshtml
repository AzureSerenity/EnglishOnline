@model DoAnCoSo.Models.BaiThi

@{
    ViewData["Title"] = "Chi tiết của " + Model.TenBaiThi;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết của Đề Thi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Chi tiết của Đề Thi</h1>
        <div class="row mb-3">
            <div class="col-md-12">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Thời gian cho phép:</strong> @Model.ThoiGianLamBai phút</li>
                    <li class="list-group-item"><strong>Số lượng câu hỏi:</strong> @Model.SoLuongCauHoi</li>
                    <li class="list-group-item"><strong>Mô tả:</strong> @Model.Mota</li>
                </ul>
            </div>
        </div>

        <div class="text-right mb-3">
            <a href="@Url.Action("Add", "CauHoi", new { baiThiId = Model.Id })" class="btn btn-primary">Thêm Câu Hỏi</a>
        </div>

        <h3 class="mb-3">Danh sách câu hỏi:</h3>
        @if (Model.BaiThi_CauHois != null && Model.BaiThi_CauHois.Any())
        {
            foreach (var item in Model.BaiThi_CauHois)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Câu hỏi @item.CauHoiId
                    </div>
                    <div class="card-body">

                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Không có câu hỏi nào cho kỳ thi này.</p>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "BaiThi")" class="btn btn-secondary">Quay lại danh sách đề thi</a>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>