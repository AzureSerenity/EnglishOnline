@model DoAnCoSo.Models.BaiThi
@{
    ViewData["Title"] = "Add New Bai Thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/add_exam/add_exam.css" rel="stylesheet" />

<div class="exam-form-container">
    <div class="form-header">
        <h2 class="form-title">Add New Exam</h2>
        <p class="form-subtitle">Please fill in the informations below</p>
    </div>

    <div class="form-body">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="MaDe" class="form-label">Exam ID</label>
                    <input asp-for="MaDe" class="form-control" placeholder="Example: BT001" />
                    <i class="fas fa-hashtag input-icon"></i>
                    <span asp-validation-for="MaDe" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TenBaiThi" class="form-label">Exam Name</label>
                    <input asp-for="TenBaiThi" class="form-control" placeholder="Enter the exam name" />
                    <i class="fas fa-file-alt input-icon"></i>
                    <span asp-validation-for="TenBaiThi" class="text-danger"></span>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="ThoiGianLamBai" class="form-label">Duration(minutes)</label>
                    <input asp-for="ThoiGianLamBai" class="form-control" type="number" placeholder="Example: 60" />
                    <i class="fas fa-clock input-icon"></i>
                    <span asp-validation-for="ThoiGianLamBai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SoLuongCauHoi" class="form-label">Number of Questions</label>
                    <i class="fas fa-list-ol input-icon"></i>
                    <input asp-for="SoLuongCauHoi" class="form-control" type="number" placeholder="Example: 30" />
                    <span asp-validation-for="SoLuongCauHoi" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Mota" class="form-label">Description</label>
                <textarea asp-for="Mota" class="form-control"
                          placeholder="Enter a detailed description of the test..."></textarea>
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i>
                    Add Exam
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Return
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}